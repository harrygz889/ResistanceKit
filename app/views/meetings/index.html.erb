<h1>Events</h1>

<%= react_component('SearchContainer', {}, {prerender: true}) %>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Location</th>
      <th>Starts on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
        <td><%= link_to meeting.name, meeting %></td>
        <td><%= meeting.location %></td>
        <td><%= meeting.starts_on %></td>
        <% if current_user && current_user.id == meeting.user_id %>
          <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
          <td><%= link_to 'Destroy', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meeting', new_meeting_path %>
